menuconfig LED_DRIVER
	bool "Led Driver"
	default y
	# depends on DT_HAS_ZEPHYR_LED_DRIVER_ENABLED
	select GPIO
	help
	  Led Driver

if LED_DRIVER

module = LED_DRIVER
module-str = Led Driver
source "subsys/logging/Kconfig.template.log_config"

endif